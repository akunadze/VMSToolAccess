{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  },
  "include": ["src/*.ts", "@types/*.d.ts", "@types/index.d.ts"]
}
